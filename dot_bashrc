#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
PS1='[\u@\h \W]\$ '

alias sudo='doas'
alias sudoedit='doas rnano'

complete -cf doas
alias config='/usr/bin/git --git-dir=/home/yerzham/.cfg/ --work-tree=/home/yerzham'

export GITHUB_USERNAME=yerzhan0
export EDITOR=nano

export PATH=~/bin:$PATH
